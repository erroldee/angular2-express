{
  "name": "angular-2-express",
  "version": "1.0.0",
  "description": "Angular 2 implementation of Express using Angular CLI for development and building",
  "main": "dist/server/app.js",
  "scripts": {
    "start": "npm run angular:development",
    "angular:standalone": "ng serve --aot=true --progress=false --proxy-config proxy.conf.json",
    "angular:development": "concurrently --kill-others \"npm run angular:standalone\" \"npm run express:local\"",
    "angular:build": "ng build --prod --sm=false --aot=true --output-path=dist/client",
    "express:local": "npm run express:build && concurrently \"tsc -w -p ./server\" \"nodemon dist/server/www.js\" ",
    "express:build": "tsc -p ./server",
    "express:prod": "npm run angular:build && npm run express:build && set NODE_ENV=production&& node dist/server/www.js",
    "tdd:postinstall": "npm run angular:build",
    "tdd:test": "ng test --watch=false",
    "tdd:pree2e": "webdriver-manager update",
    "tdd:e2e": "protractor"
  },
  "author": "Errol Edric Dee",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/common": "^4.3.3",
    "@angular/compiler": "^4.3.3",
    "@angular/compiler-cli": "^4.3.3",
    "@angular/core": "^4.3.3",
    "@angular/forms": "^4.3.3",
    "@angular/http": "^4.3.3",
    "@angular/platform-browser": "^4.3.3",
    "@angular/platform-browser-dynamic": "^4.3.3",
    "@angular/router": "^4.3.3",
    "@types/body-parser": "^1.16.4",
    "@types/compression": "^0.0.33",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.36",
    "@types/jasmine": "2.5.38",
    "@types/jquery": "^2.0.48",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mongoose": "^4.7.19",
    "@types/node": "^6.0.85",
    "@types/uuid": "^2.0.30",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "cookie-parser": "~1.3.5",
    "core-js": "^2.4.1",
    "express": "^4.15.3",
    "express-jwt": "^5.1.0",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^7.4.2",
    "mongoose": "^4.11.5",
    "normalize.css": "^5.0.0",
    "path": "^0.12.7",
    "rxjs": "^5.4.2",
    "ts-helpers": "^1.1.2",
    "ts-node": "^3.0.6",
    "tslint": "^4.5.1",
    "typescript": "^2.4.2",
    "uuid": "^3.1.0",
    "zone.js": "^0.8.16"
  },
  "devDependencies": {
    "@angular/cli": "^1.2.7",
    "codelyzer": "~2.1.1",
    "concurrently": "^3.5.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.5.0",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-remap-istanbul": "^0.2.1",
    "nodemon": "^1.11.0",
    "protractor": "^5.1.2",
    "webdriver-manager": "10.2.5"
  }
}
